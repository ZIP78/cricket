<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.cricketwireless.MainActivity">

    <ImageView
        android:id="@+id/address"
        android:src="@drawable/address"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_below="@+id/phones"
        android:layout_margin="13dp"
     />
    <ImageView
        android:id="@+id/phones"
        android:src="@drawable/phone"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_below="@+id/wireless"
        android:layout_margin="13dp"
      />
    <ImageView
        android:src="@drawable/time"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_below="@id/address"
        android:layout_margin="13dp"
      />
    <ImageView
        android:id="@+id/pic"
        android:src="@drawable/cri"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
      />
    <TextView
        android:id="@+id/wireless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cricket"
        android:layout_margin="7dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pic"
        android:textSize="40sp"
      />
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        android:layout_toRightOf="@id/phones"
        android:layout_below="@id/wireless"
        android:textSize="27sp"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:autoLink="phone"
     />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:layout_toRightOf="@id/phones"
        android:layout_below="@id/number"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="@android:color/black"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:layout_toRightOf="@id/phones"
        android:layout_below="@id/location"
        android:textSize="20sp"
        android:padding="7dp"
        android:textColor="@android:color/black"
   />
</RelativeLayout>
    </ScrollView>